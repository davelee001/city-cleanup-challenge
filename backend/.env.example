# Environment Configuration - Development
NODE_ENV=development

# Server Configuration
PORT=3001
HOST=localhost

# Database Configuration
DATABASE_PATH=./data/city-cleanup.db
DATABASE_URL=postgresql://cleanup_user:cleanup_pass@localhost:5432/city_cleanup

# CORS Configuration
CORS_ORIGIN=http://localhost:19006,http://localhost:80

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=100

# Session/JWT Configuration
JWT_SECRET=your-development-jwt-secret-key
JWT_EXPIRES_IN=24h
SESSION_SECRET=your-development-session-secret

# Redis Configuration (if using)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# External API Keys
MAPS_API_KEY=your-maps-api-key
WEATHER_API_KEY=your-weather-api-key

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# Azure Configuration (Development)
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=
AZURE_KEY_VAULT_URL=

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@citycleanup.local

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_NOTIFICATIONS=true
ENABLE_CACHE=false

# Development Tools
DEBUG=app:*
MOCK_DATA=true

# Monitoring & Observability
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
APP_VERSION=1.0.0

# Application Insights (Azure APM)
APPLICATIONINSIGHTS_CONNECTION_STRING=
APPINSIGHTS_INSTRUMENTATIONKEY=

# Prometheus
METRICS_ENABLED=true
METRICS_PATH=/api/metrics

# Logging
LOG_ENDPOINT=
LOG_HOST=localhost
LOG_PORT=3100
LOG_PATH=/loki/api/v1/push

# Alerting
SLACK_WEBHOOK_URL=
PAGERDUTY_KEY=
